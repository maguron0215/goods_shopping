<section class="hero is-warning">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        商品詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @good, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @good.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>おすすめする理由</th>
                </tr>
                <tr>
                  <td><%= simple_format @good.body %></td>
                </tr>
              </table>
              <% if @good.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_good_path(@good), class: "button is-success" %>
                <%= link_to good_path(@good), method: :delete, data: {confirm: "削除しますか？"}, class: "button is-danger has-text-white" do %>
                  <span>削除する</span>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            By <%= @good.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @good.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@good.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @good.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>
